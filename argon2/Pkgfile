# Depends on:

name=argon2
version=20171227
release=1
source=(https://github.com/P-H-C/phc-winner-argon2/archive/20171227/phc-winner-argon2-20171227.tar.gz)

build() {
	cd phc-winner-$name-$version
    make
    make DESTDIR=$PKG install
}
