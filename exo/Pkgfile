# Description: Part of the Xfce4 desktop environment
# URL: http://xfce.org/
# Maintainer:  Tim Biermann <tim_biermann@web.de>
# Depends on: libxfce4ui p5-uri libxfce4util

name=exo
version=0.12.0
release=1
source=(http://archive.xfce.org/src/xfce/exo/${version:0:4}/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
                --libexecdir=/usr/lib/$name \
                --sysconfdir=/etc \
	            --disable-nls \
                --disable-gtkdoc-html
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/{locale,gtk-doc}
}
