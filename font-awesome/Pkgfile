# Description:
# URL:
# Maintainer:
# Depends on:

name=font-awesome
version=5.0.1
release=1
source=(https://use.fontawesome.com/releases/v5.0.1/fontawesome-free-5.0.1.zip)

build() {
	cd fontawesome-free-$version
	cd use-on-desktop
	install -d $PKG/usr/share/fonts/OTF
	install -m644 *.otf $PKG/usr/share/fonts/OTF
}
