# Description: Gnome Desktop Python Bindings
# URL: http://ftp.gnome.org/pub/GNOME/sources/gnome-python-desktop/
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: librsvg libwnck

name=gnome-python-desktop
version=2.32.0
release=1
source=(https://download.gnome.org/sources/$name/2.32/$name-$version.tar.bz2 01_wnck_enums.patch)
git=()

build() {
	cd $name-$version
	patch -Np1 -i $SRC/01_wnck_enums.patch
	./configure --prefix=/usr --sysconfdir=/etc \
					--disable-gtk-doc \
					--disable-gnomeprint \
					--disable-gnomeprintui \
					--disable-totem_plparser \
					--disable-gtop \
					--disable-nautilusburn \
					--disable-brasero{burn,media} \
					--disable-mediaprofile \
					--disable-gnome{keyring,desktop,print,printui} \
					--disable-bugbuddy \
					--disable-evolution \
					--disable-evolution_ecal \
					--disable-evince
	make
	make DESTDIR=$PKG install
	make -C wnck DESTDIR=$PKG install	
}
