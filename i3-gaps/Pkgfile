# Description: i3 tiling window manager with gaps
# URL: http://i3wm.org/
# Maintainer:  Tim Biermann <tim_biermann@web.de>
# Depends on: freetype libev libxkbcommon pango startup-notification xcb-xrm xorg-xcb-util-cursor xorg-xcb-util-keysyms xorg-xcb-util-wm yajl

name=i3-gaps
version=git
release=2
git=(https://github.com/Airblader/i3)

build() {
	git clone $git
	cd i3

	autoreconf --force --install
	mkdir -p build && cd build/

	../configure --prefix=/usr \
                --disable-sanitizers
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc
}
