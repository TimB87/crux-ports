# Description: A flexible scheduler for your i3bar blocks
# URL: https://github.com/Airblader/i3blocks-gaps
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on:

name=i3blocks-gaps
version=git
release=1
source=()
git=(https://github.com/Airblader/i3blocks-gaps.git)

build() {
	git clone $git $name
	cd $name
	
    make clean debug
	
    make PREFIX=/usr
	
    make DESTDIR=$PKG PREFIX=/usr SYSCONFDIR=/usr/etc LIBEXECDIR=/usr/lib install
}
