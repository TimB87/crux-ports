# Description: A fast desktop menu 
# URL: https://github.com/enkore/j4-dmenu-desktop
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on: 

name=j4-dmenu-desktop
version=r2.16
release=1
source=(https://github.com/enkore/j4-dmenu-desktop/archive/r2.16/$name-$version.tar.gz)
git=(https://github.com/enkore/j4-dmenu-desktop.git)

build() {
	cd $name-$version
	cmake -DCMAKE_INSTALL_PREFIX=/usr .
	make
	make DESTDIR=$PKG install
}
