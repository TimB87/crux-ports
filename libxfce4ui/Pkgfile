# Description: Part of the Xfce4 desktop environment
# URL: http://xfce.org/
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: startup-notification dbus-glib

name=libxfce4ui
version=4.13.4
release=1
source=(http://archive.xfce.org/src/xfce/libxfce4ui/4.13/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
            --libexecdir=/usr/lib/$name \
            --sysconfdir=/etc \
	        --disable-nls \
            --disable-gtk-doc-html
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
}
