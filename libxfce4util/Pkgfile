# Description: Part of the Xfce4 desktop environment
# URL: http://xfce.org/
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on: glib

name=libxfce4util
version=4.13.1
release=1
source=(http://archive.xfce.org/src/xfce/libxfce4util/4.13/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr \
                --libexecdir=/usr/lib/$name \
                --sysconfdir=/etc \
	            --disable-nls --disable-gtk-doc-html
	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/locale
}
