# Description: A GTK+ greeter for LightDM
# URL: https://launchpad.net/lightdm-gtk-greeter/
# Maintainer:
# Packager:
# Depends on:

name=lightdm-gtk-greeter
version=2.0.3
release=1
source=(https://launchpad.net/$name/2.0/$version/+download/$name-$version.tar.gz)
LANG="de_DE.UTF-8"
LC_ALL="de_DE.UTF-8"

build() {
	cd $name-$version
        ./configure --prefix='/usr' \
                    --libexecdir='/var/lib/lightdm' \
                    --sbindir='/usr/bin' \
                    --sysconfdir='/usr/etc/' \
                    --with-libxklavier \
                    --enable-kill-on-sigterm \
                    --disable-libido \
                    --disable-libindicator \
                    --disable-static \
			--disable-Werror
        make
        make DESTDIR=$PKG install
        rm -fr $PKG/usr/share/locale
}
