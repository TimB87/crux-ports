# Description: Lightweight Desktop Manager prefered by Mate Desktop
# URL: 
# Maintainer:
# Packager:
# Depends on: glib2 glibc libgcrypt xorg-libx11 xorg-libxcb xorg-libxdmcp xorg-libxklavier linux-pam polkit gobject-introspection gtk-doc intltool itstool

name=lightdm
version=1.24.0
release=1
source=(https://launchpad.net/$name/1.24/$version/+download/$name-$version.tar.xz Xsession lightdm-default-config.patch lightdm.rules lightdm.service)

build() {
	cd $name-$version
    #patch -Np1 $SRC/lightdm-default-config.patch

    ./configure --prefix='/usr' \
                --localstatedir='/var' \
                --sbindir='/usr/bin' \
                --sysconfdir='/usr/etc' \
		--enable-liblightdm-qt5=no \
                --with-greeter-user='lightdm' \
                --with-greeter-session='lightdm-mini-greeter' \
                --disable-static \
		--disable-nls \
                --disable-tests 
                
    make
    make DESTDIR=$PKG install
    
    make DESTDIR=$PKG -C liblightdm-qt uninstall
    
    install -m 755 $SRC/Xsession $PKG/usr/etc/lightdm/Xsession
    rm -rf $PKG/usr/etc/init
    rm -rf $PKG/usr/include/lightdm-qt{,5}-*

    install -dm 755 $PKG/var/cache/lightdm
    install -dm 770 $PKG/var/lib/lightdm{,-data}
    install -dm 711 $PKG/var/log/lightdm
    chmod +t $PKG/var/{cache/lightdm,lib/lightdm{,-data}}
    chown 620:620 -R $PKG/var/lib/lightdm{,-data}
    chgrp 620 $PKG/var/log/lightdm
    
    #PAM
    install -d $PKG/etc/pam.d
   # install -dm 775 $PKG/etc/pam.d
#    install -m 644 $SRC/lightdm.pam $PKG/etc/pam.d/lightdm
#    install -m 644 $SRC/lightdm-autologin.pam $PKG/etc/pam.d/lightdm-autologin
    install -m 644 $SRC/$name-$version/data/pam/lightdm{-autologin,-greeter} $PKG/etc/pam.d
    install -m 644 $SRC/$name-$version/data/pam/lightdm $PKG/etc/pam.d

    #PolicyKit
    install -dm 750 -g root $PKG/usr/share/polkit-1/rules.d
    install -m 644 ../lightdm.rules $PKG/usr/share/polkit-1/rules.d/lightdm.rules

    #Service
    install -dm 755 $PKG/etc/rc.d
    install -m 755 ../lightdm.service $PKG/etc/rc.d/lightdm

    #remove junk
    rm -fr $PKG/usr/share/{locale,gtk-doc,help}

}
