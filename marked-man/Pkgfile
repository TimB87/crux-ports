# Description: markdown to roff wrapper around marked 
# URL: https://github.com/kapouer/marked-man
# Maintainer:
# Depends on:

name=marked-man
version=0.3.0
release=1
source=(https://github.com/kapouer/marked-man/archive/0.3.0/$name-$version.tar.gz)

build() {
#	cd $name-$version
    wget $source
    npm install -g --user root --prefix $PKG/usr $SRC/$name-$version.tar.gz
  rm -r $PKG/usr/etc

  # Experimental dedup
  cd $PKG/usr/lib/node_modules/$name/node_modules
  for dep in marked; do
    rm -r $dep;
    npm link $dep;
  done
}
