# Depends on:

name=modemmanager
version=1.7.990
release=1
source=(https://www.freedesktop.org/software/ModemManager/ModemManager-$version.tar.xz)

build() {
	cd ModemManager-$version
	./configure --prefix=/usr \
				--disable-nls \
				--disable-gtk-doc \
				--without-mbim \
                --without-qmi
	make
	make DESTDIR=$PKG install
}
