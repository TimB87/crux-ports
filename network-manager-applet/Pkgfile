# Description: A system tray applet for NetworkManager
# URL: https://wiki.gnome.org/Projects/NetworkManager/
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on: consolekit gconf iso-codes libsecret networkmanager

name=network-manager-applet
version=1.8.12
release=1
source=(https://download.gnome.org/sources/$name/${version:0:3}/$name-$version.tar.xz)

build() {
	cd $name-$version

    mkdir build

    meson --prefix=/usr \
        --sysconfdir=/etc \
		-Denable-gtk-doc=false \
        -Dlibnm-gtk=true \
		-Dselinux=false \
        -Dteam=true \
		-Dwwan=false \
        -Dintrospection=true build 

    cd build
    pwd
    ninja
	DESTDIR=$PKG ninja install

    rm -rf $PKG/usr/share/locale
}
