# Description: Nextcloud
# URL: https://nextcloud.com
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: nginx postgresql php php-gd php-intl php-pgsql php-imagick apcu
# Optional: You can use apache instead of nginx, there are other options for a sql server as well

name=nextcloud
version=17.0.1
release=1
source=(https://download.nextcloud.com/server/releases/$name-$version.tar.bz2)

webuser=nginx
webgroup=nginx

build() {
  cd $name

  install -d $PKG/var/www/
  cp -R $SRC/$name $PKG/var/www/.

  chown -R $webuser:$webgroup $PKG/var/www/$name

  find $PKG/var/www/$name -type f -exec chmod 0640 {} \;
  find $PKG/var/www/$name -type d -exec chmod 0750 {} \;

  chmod a+x $PKG/var/www/$name/occ

  find $PKG \(\
    -iname '*README*' -o \
    -iname '*COPYING*' -o \
    -iname '*AUTHORS*' -o \
    -iname '*news*' -o \
    -iname '*license*' -o \
    -iname '*ChangeLog.md*' \
    \) -delete || true
}
