# Description: Nextcloud server, a safe home for all your data
# URL: https://nextcloud.com
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: php-gd
# Optional: apcu curl php-fpm php-imagick php-intl php-pgsql php-redis php-sodium samba

name=nextcloud
version=28.0.4
release=1
source=(https://download.nextcloud.com/server/releases/$name-$version.tar.bz2
  nextcloud.config.php)

build() {
  cd $name

  install -vdm 755 $PKG/var/lib/$name/
  install -vdm 770 $PKG/var/lib/$name/data
  install -vdm 755 $PKG/var/lib/$name/apps
  install -vdm 755 $PKG/var/log/$name/

  install -vDm 644 .htaccess -t $PKG/etc/webapps/$name/
  install -vDm 640 ../$name.config.php $PKG/etc/webapps/$name/config/config.php
  find config -type f -exec install -vDm 644 {} $PKG/etc/webapps/$name/{} \;

  rm -rf config .htaccess

  find . -type f -not -iname "*.orig" -exec install -vDm 644 {} "$PKG/usr/share/webapps/$name/"{} \;

  ln -sv /etc/webapps/$name/config $PKG/usr/share/webapps/$name/
  ln -sv /etc/webapps/$name/.htaccess $PKG/usr/share/webapps/$name/
  ln -sv /var/lib/$name/apps $PKG/usr/share/webapps/$name/wapps
  install -vDm 755 occ -t $PKG/usr/share/webapps/$name/
}
