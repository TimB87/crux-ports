# Description: Nextcloud
# URL:         https://nextcloud.com
# Maintainer:  Tim Biermann <tim_biermann@web.de>
# Depends on: nginx postgresql php7 php7-gd php7-intl php7-pgsql 
# Optional: You can use apache instead of nginx, there are other options for a sql server as well

name=nextcloud
version=13.0.4
release=1
source=(https://download.nextcloud.com/server/releases/$name-$version.tar.bz2)

build() {
	cd $name
	
	install -d $PKG/var/www/
	cp -R $SRC/$name $PKG/var/www/.
	
    chown -R nginx:nginx $PKG/var/www/$name

    find $PKG/var/www/$name -type f -exec chmod 0644 {} \;
    find $PKG/var/www/$name -type d -exec chmod 0755 {} \;

    chmod a+x $PKG/var/www/$name/occ
}
