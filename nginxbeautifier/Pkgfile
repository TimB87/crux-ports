# Description: nginx config beautifier
# URL: https://nginxbeautifier.com
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on: nodejs

name=nginxbeautifier
version=git
release=1
source=()
git=(https://github.com/vasilevich/nginxbeautifier.git)

build() {
    git clone $git
    cd $name
    install -Dm 755 nginxbeautifier.js $PKG/usr/bin/$name
}
