# Description: A modern and flexible regular expressions library.
# URL: https://github.com/kkos/oniguruma
# Maintainer: Tim Biermann, tbier at posteo dot de
# Packager: John Vogel, jvogel4 at stny dot rr dot com
# Depends on:

name=oniguruma
version=6.9.4
release=1
source=(https://github.com/kkos/$name/releases/download/v$version/${name::4}-$version.tar.gz)

build() {
  cd ${name::4}-$version

  ./configure --prefix=/usr

  make
  make DESTDIR=$PKG install
}
