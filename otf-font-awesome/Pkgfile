# Description: Font Awesome
# URL: https://fontawesome.com/
# Maintainer: Tim Biermann, tbier at posteo dot de

name=otf-font-awesome
version=7.1.0
release=1
source=(https://github.com/FortAwesome/Font-Awesome/archive/$version/FontAwesome-$version.tar.gz)

build() {
  cd Font-Awesome-$version

  install -d $PKG/usr/share/fonts/OTF/font-awesome/
  for f in ./otfs/*.otf; do
    _name=${f##*/}
    _name=${name,,}
    _name=${name//[[:space:]]/-}
    install -m644 "$f" "$PKG/usr/share/fonts/OTF/font-awesome/$_name"
  done
}
