# Description: Data pack for Business::ISBN
# URL: https://metacpan.org/release/Business-ISBN-Data
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on:

name=p5-business-isbn-data
version=20140910.003
release=1
source=(https://cpan.metacpan.org/authors/id/B/BD/BDFOY/Business-ISBN-Data-$version.tar.gz)

build() {
  cd Business-ISBN-Data-$version
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  perl Makefile.PL
  make
  make install INSTALLDIRS=vendor DESTDIR=$PKG
  find $PKG -name .packlist -o \
    -name perllocal.pod -o \
    -name README -o \
    -name '*.bs' | xargs rm
}
