# Description: Perl/CPAN Module Test::Differences
# URL: http://search.cpan.org/dist/Test-Differences
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: p5-text-diff

name=p5-test-differences
version=0.64
release=1
source=(https://search.cpan.org/CPAN/authors/id/D/DC/DCANTRELL/Test-Differences-$version.tar.gz)

build() {
  cd Test-Differences-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make DESTDIR=$PKG install
  find $PKG \( -name '.packlist' -o -name '*.pod' \) -delete
}
