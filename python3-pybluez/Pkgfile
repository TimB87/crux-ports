# Description: Bluetooth Python extension module
# URL: https://github.com/pybluez/pybluez
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: bluez

name=python3-pybluez
version=0.23
release=3
source=(https://pypi.org/packages/source/P/PyBluez/PyBluez-$version.tar.gz
  pybluez-py310.patch
  no-2to3.patch
  427.patch)

build() {
  cd PyBluez-$version

  patch -Np0 -i $SRC/pybluez-py310.patch
  patch -Np0 -i $SRC/no-2to3.patch
  patch -Np1 -i $SRC/427.patch

  /usr/bin/python3 setup.py build
  /usr/bin/python3 setup.py install --root=$PKG --skip-build
}
