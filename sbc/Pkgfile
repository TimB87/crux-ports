# Description:	Bluetooth low-complexity, subband codec library
# URL: http://www.bluez.org/
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on:

name=sbc
version=1.3
release=1
source=(http://www.kernel.org/pub/linux/bluetooth/$name-$version.tar.xz)

build() {
        cd $name-$version

        ./configure \
		--prefix=/usr \
		--disable-static \
		--disable-tester \
		--disable-tools
        make
        make DESTDIR=$PKG install

}
