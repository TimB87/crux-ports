# Description: S-Lang programmer's library
# URL: http://www.jedsoft.org/slang/
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on: libpng

name=slang
version=2.3.1a
release=1
source=(https://www.jedsoft.org/releases/slang/slang-2.3.1a.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make -j1
	make DESTDIR=$PKG install
}
