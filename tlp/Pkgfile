# Description: Linux Advanced Power Management
# URL: http://linrunner.de/en/tlp/tlp.html
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on:

name=tlp
version=1.2.2
release=1
source=(https://github.com/linrunner/TLP/archive/$version/$name-$version.tar.gz tlp)

build() {
  cd TLP-$version
  export TLP_SBIN='/usr/bin'
  export TLP_CONF='/usr/etc/tlp'
  export TLP_NO_PMUTILS='1'
  export TLP_WITH_SYSTEMD='0'
  make DESTDIR=$PKG install-tlp install-man
  install -D -m 755 $SRC/tlp $PKG/etc/rc.d/tlp
  rm -fr $PKG/lib/elogind
}
