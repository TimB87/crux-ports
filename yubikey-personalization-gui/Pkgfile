# Description: Yubico YubiKey Personalization GUI
# URL: https://github.com/Yubico/yubikey-personalization-gui
# Maintainer: Tim Biermann <tim_biermann@web.de>
# Depends on: qt5 yubikey-personalization

name=yubikey-personalization-gui
version=3.1.25
release=1
source=(https://github.com/Yubico/yubikey-personalization-gui/archive/$name-$version.tar.gz)

build() {
	#cd $name-$version
    cd yubikey-personalization-gui-yubikey-personalization-gui-3.1.25
    /usr/lib/qt5/bin/qmake
    make
    install -D -m0755 build/release/yubikey-personalization-gui "$PKG/usr/bin/yubikey-personalization-gui"
    install -D -m0644 resources/lin/yubikey-personalization-gui.1 "$PKG/usr/share/man/man1/yubikey-personalization-gui.1"
    install -D -m0644 resources/lin/yubikey-personalization-gui.desktop "$PKG/usr/share/applications/yubikey-personalization-gui.desktop"
    install -D -m0644 resources/lin/yubikey-personalization-gui.png "$PKG/usr/share/icons/hicolor/128x128/apps/yubikey-personalization-gui.png"
	for SIZE in 16 24 32 48 64 96; do
                convert -scale ${SIZE} +set date:create +set date:modify \
			resources/lin/yubikey-personalization-gui.png \
			${srcdir}/yubikey-personalization-gui.png
		install -D -m0644 ${srcdir}/yubikey-personalization-gui.png "$PKG/usr/share/icons/hicolor/${SIZE}x${SIZE}/apps/yubikey-personalization-gui.png"
	done
}
